{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/controller/user.ts",
    "src/controller/public.ts",
    "src/controller/permission.ts",
    "src/controller/menu.ts",
    "src/controller/goods-type.ts",
    "src/controller/goods.ts"
  ],
  "spec": {
    "outputDirectory": "api-doc",
    "specVersion": 3,
    "name": "tsoa-api",
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "routes": {
    "middleware": "koa",
    "routesDir": "src/routers",
    "routesFileName": "index.ts",
    "authenticationModule": "./src/middleware/authentication.ts"
  }
}
